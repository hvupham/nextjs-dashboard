{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Server (NO TURBO)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "dev",
                "--no-turbo"
            ],
            "runtimeArgs": [
                "--inspect"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}